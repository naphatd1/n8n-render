# Required
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password

# Host / Port (Render will set PORT automatically)
N8N_HOST=0.0.0.0
N8N_PORT=${PORT:-5678}

# Optional (ถ้าใช้ DB)
#DB_TYPE=postgresdb
#DB_POSTGRESDB_HOST=your-db-host
#DB_POSTGRESDB_PORT=5432
#DB_POSTGRESDB_DATABASE=n8n
#DB_POSTGRESDB_USER=username
#DB_POSTGRESDB_PASSWORD=password

# Execution mode - แทนที่ด้วย URL ของ Render service
N8N_EDITOR_BASE_URL=https://your-app-name.onrender.com
WEBHOOK_TUNNEL_URL=https://your-app-name.onrender.com

# Don't use telemetry (optional)
N8N_DIAGNOSTICS_ENABLED=false